<div id="filters_inner">
	<div class="filter" id="what">
		<h4>What?</h4>
		<ul class="list-group">
			<% Settings.what_filters.each do |slug, what_obj| %>
				<li class="list-group-item">
					<span class="badge">0</span>
					<a href="<%= slug %>"><%= what_obj.label %></a>
				</li>
			<% end %>
		</ul>
	</div>
	<div class="filter" id="when">
		<h4>When?</h4>
		<ul class="list-group">
			<li class="list-group-item">
				<span class="badge">0</span>
				<a href="#">Today</a>
			</li>
			<li class="list-group-item">
				<span class="badge">0</span>
				<a href="#">Tonight</a>
			</li>
			<li class="list-group-item">
				<span class="badge">0</span>
				<a href="#">Tomorrow</a>
			</li>
			<li class="list-group-item">
				<span class="badge">0</span>
				<a href="#">This weekend</a>
			</li>
			<li class="list-group-item">
				<span class="badge">0</span>
				<a href="#">Next week</a>
			</li>
		</ul>
	</div>
	<div class="filter" id="where">
		<h4>Where?</h4>
		<ul class="list-group">
			<% Settings.where_filters.each do |slug, where_obj| %>
				<li class="list-group-item">
					<span class="badge">0</span>
					<a href="<%= slug %>"><%= where_obj.label %></a>
				</li>
			<% end %>
		</ul>
	</div>
</div>